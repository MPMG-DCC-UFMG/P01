[Unit]
Description=Servico Lemonade - Modulo Caipirinha

[Service]
Type=simple
Environment=LEMONADE_HOME=/opt/lemonade/docker-lemonade
Environment=CAIPIRINHA_HOME=/opt/lemonade/docker-lemonade/thorn
Environment=PYTHONPATH=/opt/lemonade/docker-lemonade/thorn
Environment=CAIPIRINHA_CONFIG=/opt/lemonade/docker-lemonade/config/thorn-config.yaml
WorkingDirectory=/opt/lemonade/docker-lemonade/thorn

ExecStartPre=/opt/lemonade/docker-lemonade/thorn/venv/bin/python ${CAIPIRINHA_HOME}/thorn/manage.py db upgrade
ExecStart=/opt/lemonade/docker-lemonade/thorn/venv/bin/python ${CAIPIRINHA_HOME}/thorn/runner/thorn_server.py -c ${CAIPIRINHA_CONFIG} 

[Install]
WantedBy=multi-user.target
