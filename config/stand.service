[Unit]
Description=Servico Lemonade - Modulo stand

[Service]
Type=simple
Environment=LEMONADE_HOME=/opt/lemonade
Environment=STAND_HOME=/opt/lemonade/stand
Environment=PYTHONPATH=/opt/lemonade/stand
Environment=STAND_CONFIG=/opt/lemonade/config/stand-config.yaml
WorkingDirectory=/opt/lemonade/stand

ExecStartPre=/opt/lemonade/stand/venv/bin/python ${STAND_HOME}/stand/manage.py db upgrade
ExecStart=/opt/lemonade/stand/venv/bin/python ${STAND_HOME}/stand/runner/stand_server.py -c ${STAND_CONFIG} 

[Install]
WantedBy=multi-user.target
